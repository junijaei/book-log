{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "gen:types": {
      "inputs": [
        "apps/supabase/supabase/migrations/**/*.sql",
        "apps/supabase/supabase/config.toml"
      ],
      "outputs": ["packages/database/database.ts"]
    }
  }
}
